                    animate={{ opacity: 1, y: 0 }}
                    exit={{ opacity: 0, y: -20 }}
                    transition={{ duration: 0.5 }}
                  >
                    <h1 className="text-4xl md:text-6xl font-bold mb-6 tracking-tight">
                      <span className="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600">
